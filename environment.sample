project: pearsontechnology
environments:
  - name: sample-app-environment
    namespace: sample-app
    deployment:
      method: rolling-upgrade
    services:
      - name: front
        external_url: front.sample-app.domain
        ssl: false
        port: 80
        env:
          - name: APP_PORT
            value: 80
          - name: BACK_END
            value: back.sample-app.svc.cluster.local
        requests:
           cpu: 10m
           memory: 5000Mi
        limits:
           cpu: 10m
           memory: 5000Mi
      - name: back
        port: 80
        replicas: 1
        hpa:
          min_replicas: 1
          max_replicas: 5
          target_average_utilization:
          - cpu: 80
          - memory: 80
        env:
          - name: APP_PORT
            value: 80
        requests:
           cpu: 10m
           memory: 5000Mi
        limits:
           cpu: 50m
           memory: 5000Mi

